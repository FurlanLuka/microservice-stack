{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@microservice-stack/local-deployment": [
        "libs/local-deployment/src/index.ts"
      ],
      "@microservice-stack/module-config": [
        "libs/nest-modules/config/src/index.ts"
      ],
      "@microservice-stack/module-health": [
        "libs/nest-modules/health/src/index.ts"
      ],
      "@microservice-stack/module-rabbitmq": [
        "libs/nest-modules/rabbitmq/src/index.ts"
      ],
      "@microservice-stack/module-typeorm-migrations": [
        "libs/nest-modules/typeorm-migrations/src/index.ts"
      ],
      "@microservice-stack/nest-application": [
        "libs/nest-application/src/index.ts"
      ],
      "@microservice-stack/npx-build": ["libs/npx-build/src/index.ts"],
      "@microservice-stack/workspace": ["libs/workspace/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
