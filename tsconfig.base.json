{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@microservice-stack/workspace": [
        "packages/workspace/src/index.ts"
      ],
      "@microservice-stack/module-config": [
        "libs/nest-modules/config/src/index.ts"
      ],
      "@microservice-stack/module-health": [
        "libs/nest-modules/health/src/index.ts"
      ],
      "@microservice-stack/module-rabbitmq": [
        "libs/nest-modules/rabbitmq/src/index.ts"
      ],
      "@microservice-stack/module-typeorm-migrations": [
        "libs/nest-modules/typeorm-migrations/src/index.ts"
      ],
      "@microservice-stack/nest-application": [
        "libs/nest-application/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
